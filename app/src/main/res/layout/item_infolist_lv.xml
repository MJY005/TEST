<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="64dp">

    <!-- 单词标题 -->
    <TextView
        android:id="@+id/item_info_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="milk"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true" />

    <!-- 翻译/音标 -->
    <TextView
        android:id="@+id/item_info_tv_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_info_tv_title"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:text="牛奶"
        android:textSize="14sp"
        android:textColor="@color/grey"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- 右箭头图标 -->
    <ImageView
        android:id="@+id/item_info_iv_next"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/turnrighticon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="查看详情" />

</RelativeLayout>
