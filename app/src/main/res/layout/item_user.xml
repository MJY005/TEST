<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/item_user_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: 1"
        android:textSize="14sp"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/item_user_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名: test"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/item_user_tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年龄: 22"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/item_user_tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机: 18800000000"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/item_user_btn_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="编辑"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/item_user_btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="删除"
            android:backgroundTint="#F44336"/>

    </LinearLayout>

</LinearLayout>

