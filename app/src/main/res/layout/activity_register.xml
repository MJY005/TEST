<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册新账户"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_et_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="用户名"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/register_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/register_et_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="手机号（可选）"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/register_et_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/register_et_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="年龄（可选，数字）"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/register_et_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/register_et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/register_et_age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/register_et_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="确认密码"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/register_et_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/register_btn_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="@color/white"
        android:backgroundTint="@color/yellow"
        android:elevation="2dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/register_et_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

