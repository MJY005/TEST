<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".WordDescActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 英文单词（居中） -->
        <TextView
            android:id="@+id/worddesc_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="hello"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="32sp"
            android:letterSpacing="0.05"
            android:layout_marginBottom="12dp" />

        <!-- 音标（居中） -->
        <TextView
            android:id="@+id/worddesc_tv_phonetic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="英 [ˈhɛləʊ]  美 [ˈhɛləʊ]"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <!-- 发音按钮组（居中） -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/worddesc_btn_uk_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英音"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:drawableLeft="@drawable/ic_volume"
                android:drawablePadding="6dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/worddesc_btn_us_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美音"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:drawableLeft="@drawable/ic_volume"
                android:drawablePadding="6dp"
                android:layout_marginLeft="12dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 中文释义（主要翻译） -->
        <TextView
            android:id="@+id/worddesc_tv_tran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中文释义"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:layout_marginBottom="16dp" />

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrey"
            android:layout_marginBottom="16dp" />

        <!-- 详细释义区域 -->
        <TextView
            android:id="@+id/worddesc_tv_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="详细释义"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- 词性释义列表 -->
        <LinearLayout
            android:id="@+id/worddesc_ll_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- 例句区域 -->
        <TextView
            android:id="@+id/worddesc_tv_example_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="例句"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/worddesc_tv_example"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.3" />

            <ImageButton
                android:id="@+id/worddesc_btn_example_audio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_volume"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="例句发音"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 原有详细释义（兼容旧格式） -->
        <TextView
            android:id="@+id/worddesc_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.3"
            android:lineSpacingExtra="4dp"
            android:visibility="gone" />

        <!-- 如果没有详细释义，显示提示 -->
        <TextView
            android:id="@+id/worddesc_tv_no_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暂无详细释义"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
