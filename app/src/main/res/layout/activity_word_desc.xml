<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".WordDescActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 单词标题区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/worddesc_tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="hello"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="32sp"
                android:letterSpacing="0.05" />

            <!-- 发音按钮 -->
            <ImageButton
                android:id="@+id/worddesc_btn_audio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_play"
                android:contentDescription="播放发音"
                android:visibility="gone"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <!-- 音标和词性区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/worddesc_tv_phonetic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[ˈhɛləʊ]"
                android:textColor="@color/grey"
                android:textSize="18sp"
                android:layout_marginRight="12dp" />

            <TextView
                android:id="@+id/worddesc_tv_part_of_speech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/part_of_speech_bg"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 中文释义（主要翻译） -->
        <TextView
            android:id="@+id/worddesc_tv_tran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中文释义"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:layout_marginBottom="16dp" />

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrey"
            android:layout_marginBottom="16dp" />

        <!-- 详细释义区域 -->
        <TextView
            android:id="@+id/worddesc_tv_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="详细释义"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/worddesc_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.3"
            android:lineSpacingExtra="4dp" />

        <!-- 如果没有详细释义，显示提示 -->
        <TextView
            android:id="@+id/worddesc_tv_no_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暂无详细释义"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
